<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="org.graylog2.junit.extensions">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p: %c - %m%n"/>
            <IgnoreDeceptiveExceptionsByRegexFilter regex=".*Default pattern for deceptive exceptions.*" onMatch="DENY" onMismatch="ACCEPT"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.graylog2" level="info"/>
        <Logger name="org.graylog" level="info"/>
        <Root level="warn">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>
